  <div class="container">
      <div class="col-sm-6 col-sm-offset-3">
          <h1><span class="fa fa-sign-in"></span> Edit User </h1>
                  <!-- show message -->
              {{#if message.length}}
                  <div class="alert alert-danger">{{message}}</div>
              {{/if}}
          <form action="/api/user/patchuser/{{user._id}}?_method=PATCH" method="POST">
              <div class="form-group">
                  <label>Email</label>
                  <input type="email" id="email" placeholder="Enter email" class="form-control" name="email" value="{{user.local.email}}"/>
              </div>            
              <div class="form-group">
                  <label>FullName</label>
                  <input type="text" id="FullName" placeholder="Enter FullName" class="form-control" name="FullName" value="{{user.info.FullName}}"/>
              </div>
              <div class="form-group">
                  <label>UserName</label>
                  <input type="text" id="UserName" placeholder="Enter UserName" class="form-control" name="UserName" value="{{user.local.UserName}}"/>
              </div>
              <div class="form-group">
                  <label>Age</label>
                  <input type="number" id="Age" placeholder="Enter Age" class="form-control" name="Age" value="{{user.info.Age}}"/>
              </div>
              <button type="submit" class="btn btn-warning btn-lg">Save</button>
              <a href="/api/user" class="btn btn-default btn-sm">Back</a>
          </form>         
      </div>
  </div>